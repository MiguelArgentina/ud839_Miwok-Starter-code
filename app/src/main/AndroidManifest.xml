<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.miwok">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ColorsActivity"
            android:label="@string/Colors_Activity_Label"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.miwok.MainActivity" />

        </activity>
        <activity
            android:name=".FamilyActivity"
            android:label="@string/Family_Activity_Label"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.miwok.MainActivity" />
        </activity>
        <activity
            android:name=".PhrasesActivity"
            android:label="@string/Phrases_Activity_Label"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.miwok.MainActivity" />
        </activity>

        <activity
            android:name=".NumbersActivity"
            android:label="@string/Number_Activity_Label"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.miwok.MainActivity" />
        </activity>
    </application>

</manifest>